#!/bin/bash
# insta485db

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    mkdir -p backend/var/uploads
    sqlite3 backend/var/RunBlue.sqlite3 < backend/sql/schema.sql
    sqlite3 backend/var/RunBlue.sqlite3 < backend/sql/data.sql
    cp backend/sql/uploads/* backend/var/uploads
    ;;

  "destroy")
    rm -rf backend/var/RunBlue.sqlite3 backend/var/uploads
    ;;

  "reset")
    rm -rf backend/var/RunBlue.sqlite3 backend/var/uploads
    mkdir -p backend/var/uploads
    sqlite3 backend/var/RunBlue.sqlite3 < backend/sql/schema.sql
    sqlite3 backend/var/RunBlue.sqlite3 < backend/sql/data.sql
    cp backend/sql/uploads/* backend/var/uploads
    ;;

  "dump")
    sqlite3 -batch -line backend/var/RunBlue.sqlite3 'SELECT * FROM posts'
    sqlite3 -batch -line backend/var/RunBlue.sqlite3 'SELECT * FROM users'
    ;;
  *)
    usage
    exit 1
    ;;
esac