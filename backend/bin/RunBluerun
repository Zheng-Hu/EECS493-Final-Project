#!/bin/bash
#RunBlue


set -Eeuo pipefail


# Call RunBluedb create if the database file does not exist

if [ ! -f 'var/RunBlue.sqlite3' ]; then
 backend/bin/RunBluedb create
fi

# Set FLASK_ENV and FLASK_APP environment variables

export FLASK_ENV=development
export FLASK_APP=RunBlue

# Run the development server on port 8000

flask run --host 0.0.0.0 --port 8000